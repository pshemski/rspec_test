<h1>Welcome to GainPropane!</h1>
<h2>Your one stop solution for all your propane needs.</h2>
<%= form_for(@order) do |f| %> 
	
	<%= f.select :brand_id, ['Perton', 'Pertonas'] %>
	<%= f.select :weight_in_kg, [12, 14] %>
	<%= f.select :quantity, [1, 2, 3, 4, 5] %>
	<%= f.text_field :preferred_time %>
	<%= f.text_area :notes %>
	<%= f.submit 'Next' %> 
<% end %>