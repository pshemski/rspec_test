<%= form_for @confirmation do |f| %>
	<p>Have a confirmation code? Enter it here:</p>
	<%= f.text_field :otp %>
	<%= f.submit 'Confirm' %>
<% end %>
<hr>

<h1>Welcome to GainPropane!</h1>
<h2>Your one stop solution for all your propane needs.</h2>
<%= form_for(@order) do |f| %>
	<% state = State.find_by(state: 'pending') %>
	<div><%= f.label :brand %>
	<%= f.select :brand_id, [['Petron', 1],['Petronas', 2]] %></div>
	<div><%= f.label :weight %>
	<%= f.select :weight_in_kg, [12, 14] %></div>
	<div><%= f.label :quantity %>
	<%= f.select :quantity, [1, 2, 3, 4, 5] %></div>
	<div><%= f.label :preferred_time %>
	<%= f.text_field :preferred_time %></div>
	<div><%= f.label :notes %>
	<%= f.text_area :notes %></div>
	<%= f.hidden_field :state_id, value: state.id %>
	<%= f.submit 'Next' %> 
<% end %>