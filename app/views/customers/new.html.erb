<h4>Order successfully created! Now tell us where to send it.</h4>
<%= simple_form_for @customer do |f| %>	
	<%= f.hidden_field :order_id, value: session[:order_id] %>
	<%= f.input :name %>
	<%= f.input :email %>
	<%= f.input :delivery_address %>
	<%= f.input :postcode %>
	<%= f.submit 'Next', class: "btn btn-primary" %>
<% end %>